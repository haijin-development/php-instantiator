{
    "name": "haijin/instantiator",
    "description": "A library to create and obtain instances of objects using a simple DSL.",
    "keywords": ["dependency injection", "service provider", "factory"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-instantiator",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.development@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
    ],
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "require": {
        "haijin/tools": "^1.2"
    },
    "require-dev": {
        "haijin/specs": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Haijin\\Instantiator\\": ["src/"]
        }
    },
    "scripts": {
        "specs": "php ./vendor/bin/specs"
    }
}
