{
    "name": "haijin/instantiator",
    "description": "A library to create and obtain instances of objects using a simple DSL. A replacement for 'new' and for the infamous dependency injection mechanism with additional features.",
    "keywords": ["dependency injection", "service provider", "factory"],
    "version": "0.0.1",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-instantiator",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.development@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
    ],
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "require": {
        "haijin/tools": "^0.0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "haijin/testing": "^0.0.2"
    },
    "autoload": {
        "psr-4": {
            "Haijin\\Instantiator\\": ["src/"]
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests/ --bootstrap vendor/autoload.php"
    }
}
